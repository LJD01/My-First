<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.water.repository.CustomerRepository">

    <insert id="createCustomer" parameterType="Customer">
      insert into customer (code,'name',balance,address,tel,area_id,price_type,create_time,create_user,is_delete)
      values (#{code},#{name},#{balance},#{address},#{tel},#{areaId},#{priceType},Now(),#{createUser},0)
    </insert>

    <select id="findByCode" resultType="Customer">
      select * from customer where code = #{code}
    </select>

    <select id="findById" resultType="Customer">
        select * from customer where id = #{code}
    </select>

    <select id="pageFindAll" resultType="Customer">
      SELECT * from customer
      <!--<if test="start != null">-->
          <!--where id >= (select id from customer limit #{start},1)) limit #{size}-->
      <!--</if>-->
    </select>

    <select id="countAll" resultType="java.lang.Integer">
        select count(id) from customer
    </select>
</mapper>